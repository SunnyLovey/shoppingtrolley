<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_hot_goods">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simple_headPic"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        app:roundAsCircle="true"
        />
    <TextView
        android:id="@+id/text_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:text="text"
        android:layout_toRightOf="@+id/simple_headPic"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_25"
        />
    <TextView
        android:id="@+id/text_createTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_27"
        android:textSize="@dimen/sp_10"
        android:textColor="#666666"
        android:layout_marginRight="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_below="@+id/simple_headPic"
        android:layout_marginTop="@dimen/dp_10"
        />
    <ImageView
        android:id="@+id/image_simple"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:layout_below="@+id/text_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />
    <ImageView
        android:id="@+id/image_hand"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:background="@drawable/common_btn_prise_n"
        android:layout_below="@+id/image_simple"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        />
   <com.bawei.demo.shoppingtrolley.customview.MyLayout
       android:id="@+id/myLayout"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_300"
      android:layout_above="@+id/image_hand"
       ></com.bawei.demo.shoppingtrolley.customview.MyLayout>
    <TextView
        android:id="@+id/hand_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_simple"
        android:layout_alignParentRight="true"
        android:text="text"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_14"
        />

</RelativeLayout>
