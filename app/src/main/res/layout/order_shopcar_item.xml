<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_order_goods"
    android:layout_marginTop="@dimen/dp_5"
    >
    <ImageView
        android:id="@+id/image_pic"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@mipmap/ic_launcher"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        />
    <TextView
        android:id="@+id/goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_pic"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="text"
        android:textColor="#666"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        />
    <TextView
        android:id="@+id/goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_pic"
        android:layout_toRightOf="@id/image_pic"
        android:text="text"
        android:textColor="#ff0606"
        android:textSize="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_8"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_8"
        >

        <TextView
            android:id="@+id/text_jian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#666666"
            android:textSize="@dimen/sp_20"

            />

        <EditText
            android:id="@+id/edit_num"
            android:layout_width="@dimen/dp_31"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_num"
            android:ems="3"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/text_jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="+"
            android:textColor="#666666"
            android:textSize="@dimen/dp_16"
            />
    </LinearLayout>

</RelativeLayout>
