<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dingdan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        />
    <TextView
        android:id="@+id/text_receive_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/dingdan"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_receive_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/text_receive_code"
        ></android.support.v7.widget.RecyclerView>
      <TextView
          android:id="@+id/comoney"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="派件公司"
          android:layout_below="@+id/recycler_receive_detail"
          android:layout_marginTop="@dimen/dp_20"
          android:layout_marginLeft="@dimen/dp_10"
          android:textSize="@dimen/sp_12"
          android:textColor="#666666"
          />
    <TextView
        android:id="@+id/receive_comoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="派件公司"
        android:layout_below="@+id/recycler_receive_detail"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/comoney"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        />
    <TextView
        android:id="@+id/kuaidi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快递单号"
        android:layout_below="@+id/comoney"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:layout_marginBottom="@dimen/dp_5"
        />
    <TextView
        android:id="@+id/receive_expressSn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快递单号"
        android:layout_below="@+id/comoney"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:layout_toRightOf="@+id/kuaidi"
        android:layout_marginBottom="@dimen/dp_5"
        />
    <TextView
        android:id="@+id/confirm_order"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_26"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_below="@+id/recycler_receive_detail"
        android:background="@drawable/address_style"
        android:layout_marginRight="@dimen/dp_10"
        android:text="确定收货"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_5"
        />
</RelativeLayout>
