<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dingdan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        />
    <TextView
        android:id="@+id/text_order_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/dingdan"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_order_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/text_order_pay"
        ></android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/order_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共0件商品,"
        android:layout_toLeftOf="@+id/order_total_price"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:layout_below="@+id/recycler_order_pay"
        />
    <TextView
        android:id="@+id/order_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="需付款00.0元"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:layout_below="@+id/recycler_order_pay"
        />
    <TextView
        android:id="@+id/cancel_order"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_26"
        android:text="取消订单"
        android:layout_below="@+id/order_total_price"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:background="#f2f2f2"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/go_to_pay_order"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_26"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/order_total_price"
        android:background="@drawable/address_style"
        android:layout_marginRight="@dimen/dp_10"
        android:text="去支付"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        />
</RelativeLayout>
