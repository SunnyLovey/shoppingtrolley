<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_activity.HomeActivity">
    <com.bawei.demo.shoppingtrolley.customview.CustomViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_60"></com.bawei.demo.shoppingtrolley.customview.CustomViewPager>
    <RadioGroup
        android:id="@+id/home_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_81"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_homepage_bottom"
        >
      <RadioButton
          android:id="@+id/home_page"
          android:layout_width="@dimen/dp_30"
          android:layout_height="@dimen/dp_30"
          android:button="@null"
          android:background="@drawable/shouye_selector"
          android:layout_marginLeft="@dimen/dp_32"
          android:layout_marginTop="@dimen/dp_26"
         android:gravity="center"
          />
        <RadioButton
            android:id="@+id/home_circle"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:button="@null"
            android:background="@drawable/quanzi_selector"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_25"
            android:gravity="center"
            />
        <RadioButton
            android:id="@+id/home_shopping_cart"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:button="@null"
            android:background="@drawable/tab_home_bottom_gouwuche"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            />
        <RadioButton
            android:id="@+id/home_order"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:button="@null"
            android:background="@drawable/zhangdan_selector"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_25"
            android:gravity="center"
            />
        <RadioButton
            android:id="@+id/home_my"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:button="@null"
            android:background="@drawable/wode_selector"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_25"
            android:gravity="center"
            />

    </RadioGroup>

</RelativeLayout>