<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_312"
    android:layout_height="wrap_content"
    tools:context=".shoppingaddress.AddressActivity"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    >
    <TextView
        android:id="@+id/pop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_12"
        />
    <TextView
        android:id="@+id/pop_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_100"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_12"
        />
    <TextView
        android:id="@+id/pop_address_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_below="@+id/pop_name"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:maxLines="2"
        android:layout_marginRight="@dimen/dp_20"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_12"
        />
    <View
        android:id="@+id/view_li"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#666666"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/pop_address_show"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_100"
        android:layout_marginBottom="@dimen/dp_8"
        />
    <View
        android:id="@+id/view_l"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_60"
        android:background="@color/colorWhite"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_8"
        />
   <TextView
       android:id="@+id/text_choose"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="选择"
       android:textSize="@dimen/sp_12"
       android:textColor="@color/colorRed"
       android:layout_alignParentRight="true"
       android:layout_marginRight="@dimen/dp_40"
       android:layout_marginTop="@dimen/dp_40"

       />

</RelativeLayout>


