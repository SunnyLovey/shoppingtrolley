<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_hot_goods"
    >
    <Button
        android:id="@+id/shop_car_del"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_97"
        android:background="#ff5e70"
        android:text="删除"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14" />
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circler_relative"
        >
        <TextView
            android:id="@+id/circle_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12"
            />
        <ImageView
            android:id="@+id/circle_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140"
            android:layout_below="@+id/circle_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"/>
            <TextView
                android:id="@+id/circle_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:textColor="#666666"
                android:textSize="@dimen/sp_10"
                android:layout_below="@+id/circle_pic"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                />
        <ImageView
            android:id="@+id/circle_hand"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/common_btn_prise_s"
            android:layout_below="@+id/circle_pic"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_34"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/circle_hand_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle_pic"
            android:layout_alignParentRight="true"
            android:text="text"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12"
            />
    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>
